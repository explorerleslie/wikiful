<h1>Welcome to Wikiful</h1>
<p>Here are some recent articles:</p>

<% @recent_articles.each do |article| %>
<h3><%= link_to article.title, article %></h3>
<div class="published"><p>Published on <%= article.created_at.strftime('%b %d, %Y') %></p></div>
<div class="categories"><p>Filed under: <% article.categories.each do |category| %>
  <%= category.name %>&nbsp;
  <% end %></p></div>
<p><%= truncate(article.content, length: 200) %></p>
<% end %>